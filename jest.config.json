{
  "globals": {
    "ts-jest": {
      "babelConfig": true
    }
  },
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "js"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testRegex": "lib/.*spec.ts$",
  "collectCoverageFrom": [
    "lib/**/*.{ts}",
    "!**/node_modules/**",
    "!**/vendor/**",
    "!**/*.spec.ts"
  ],
  "transformIgnorePatterns": ["/node_modules/(?!(got))/"],
  "coverageReporters": ["json", "lcov"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  },
  "coverageDirectory": "coverage/unit"
}
