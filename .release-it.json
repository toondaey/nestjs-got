{
  "git": {
    "tag": false,
    "push": false,
    "commit": false,
    "requireBranch": ["main", "release-*"],
    "requireCommits": true,
    "requireCleanWorkingDir": true
  },
  "npm": {
    "publish": true,
    "skipChecks": false,
    "versionArgs": ["--allow-same-version", "--workspaces-update=false"]
  },
  "github": {
    "release": false,
    "tokenRef": "GITHUB_TOKEN",
    "releaseName": "Release v${version}"
  }
}
