{
  "git": {
    "commitMessage": "chore(release): ${version}",
    "tag": false,
    "push": false,
    "commit": false,
    "requireBranch": "release-*",
    "requireCommits": true,
    "requireCleanWorkingDir": true
  },
  "npm": {
      "publish": true,
    "skipChecks": false,
    "ignoreVersion": true
  },
  "github": {
    "release": false,
    "tokenRef": "GITHUB_TOKEN",
    "releaseName": "Release v${version}"
  }
}
